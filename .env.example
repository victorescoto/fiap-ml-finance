# =============================================================================
# FIAP Fase 3 - ML Finance - Environment Variables Template
# =============================================================================
# Copy this file to .env and adjust the values according to your setup

# AWS Configuration
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1
PREFIX=fiap-fase3

# S3 Buckets (will be created by Terraform with PREFIX)
S3_RAW_BUCKET=${PREFIX}-finance-raw
S3_PROCESSED_BUCKET=${PREFIX}-finance-processed
S3_MODELS_BUCKET=${PREFIX}-finance-models

# Stock Symbols to analyze
SYMBOLS=AAPL,MSFT,AMZN,GOOGL,META,NVDA,TSLA

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=true

# Data Settings
DATA_DIR=./data
MODELS_DIR=./models

# Machine Learning
ML_MODEL_TYPE=LogisticRegression
ML_TRAIN_PERIOD=252  # trading days (1 year)
ML_FEATURES=sma_5,sma_20,rsi_14,bb_upper,bb_lower,volume_sma

# Yahoo Finance Settings
YFINANCE_THREADS=false
YFINANCE_PROGRESS=false
YFINANCE_PREPOST=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development
DEBUG=true
ENVIRONMENT=development

# Terraform Variables
TF_VAR_aws_region=${AWS_REGION}
TF_VAR_prefix=${PREFIX}

# Optional: If using specific AWS profile
# AWS_PROFILE=default

# Optional: Custom endpoints for testing
# AWS_ENDPOINT_URL_S3=http://localhost:4566  # for LocalStack